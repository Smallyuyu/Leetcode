class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
        int num=nums.size()-k+1;
        double sum=0;
        double temp=0;
        for(int i=0;i<k;i++){
            sum=sum+nums[i];
        }
        temp=sum;
        for(int i=0;i<num-1;i++){
            temp=temp-nums[i]+nums[i+k];
            if(temp>sum){
                sum=temp;
            }
        }
        double average=sum/k;
        return average;
    }
};
